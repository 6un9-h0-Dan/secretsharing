<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<servlet>
		<servlet-name>split</servlet-name>
		<servlet-class>org.secretsharing.server.SplitServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>join</servlet-name>
		<servlet-class>org.secretsharing.server.JoinServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>split</servlet-name>
		<url-pattern>/split</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>join</servlet-name>
		<url-pattern>/join</url-pattern>
	</servlet-mapping>

</web-app>